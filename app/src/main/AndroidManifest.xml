<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.health17.iwatch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OnBoardingActivity"
            android:theme="@style/MaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/MainActivityStyle" />

        <activity
            android:name=".LoginActivity"
            android:theme="@style/FullScreenWithStatusBar" />

        <activity
            android:name=".SignUpActivity"
            android:theme="@style/FullScreenWithStatusBar" />

        <activity
            android:name=".VerificationActivity"
            android:theme="@style/FullScreenWithStatusBar" />

        <activity
            android:name=".PasswordResetActivity"
            android:theme="@style/FullScreenWithStatusBar" />

        <activity android:name=".Settings" />

        <!--made activity pill-month launcher-->
        <activity android:name=".PillMonth" />
    </application>

</manifest>