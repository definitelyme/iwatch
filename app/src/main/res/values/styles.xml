<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Default Application Theme (Extend this theme to create any custom themes) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <!-- This kinda acts like a SafeArea Widget for Native Android -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <!-- Updates to the new font -->
        <item name="android:fontFamily">@font/mont_regular</item>

    </style>

    <!-- Material Theme -->
    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <!-- This kinda acts like a SafeArea for Native Android -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <!-- Updates to the new font -->
        <item name="android:fontFamily">@font/mont_regular</item>

    </style>

    <style name="FullScreenWithStatusBar" parent="AppTheme">

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="MainActivityStyle" parent="FullScreenWithStatusBar">
        <item name="android:statusBarColor">@color/gray100</item>

        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/sidebar_background_color_state</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">

        <item name="windowNoTitle">true</item>

    </style>

    <!-- ############ Others ########### -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- SideBar Themes -->
    <style name="SideBarTheme" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

</resources>