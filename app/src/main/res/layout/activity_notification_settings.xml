<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationSettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_15"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/notifications"
                android:textColor="@color/black"
                android:textSize="@dimen/font_20"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/bellImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_15"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_notifications_none_24" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:theme="@style/MaterialTheme"
        android:padding="@dimen/dimen_20">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/receive_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            app:thumbTint = "@color/colorPrimary"
            app:trackTint="@color/backgroundColorLight"
            android:text="@string/receive_notifications"
            android:textColor="@color/black"
            android:textSize="@dimen/font_17"
            android:padding="@dimen/dimen_10"
            android:layout_margin="@dimen/dimen_2"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sound_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:thumbTint = "@color/colorPrimary"
            app:trackTint="@color/backgroundColorLight"
            android:checked="true"
            android:text="@string/sound_notifications"
            android:textColor="@color/black"
            android:textSize="@dimen/font_17"
            android:padding="@dimen/dimen_10"
            android:layout_margin="@dimen/dimen_2"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>